@model CRUDEMPLEADOS.Models.Empleado
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-danger">¿Esta seguro de eliminar el empleado?</h1>


<div class="row">
    <div class="col-sm-4">
        <form asp-action="Eliminar" asp-controller="Home" method="POST">
            <input type="hidden" asp-for="IdEmpleado" />

            <div class="mb-2">
                <label class="form-label" asp-for="Nombre">Nombre</label>
                <input type="text" class="form-control form-control-sm" asp-for="Nombre" disabled/>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Correo">Correo</label>
                <input type="text" class="form-control form-control-sm" asp-for="Correo" disabled/>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Telefono">Telefono</label>
                <input type="text" class="form-control form-control-sm" asp-for="Telefono" disabled/>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="IdCargo">Cargo</label>
                <input type="text" class="form-control form-control-sm" asp-for="Cargo.Descripcion" disabled/>
                   
            </div>
            <div class="mb-2">
               
                    <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>
                
                <a class="btn btn-dark btn-sm" asp-controller="Home" asp-action="Index" > Volver </a>
            </div>

        </form>
    </div>
</div>

