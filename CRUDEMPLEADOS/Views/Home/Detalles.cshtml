@model CRUDEMPLEADOS.Models.ViewModels.EmpleadoVM
@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.empleado.IdEmpleado == 0)
{
    <h1>Crear empleado</h1>
}
else
{
    <h1>Editar empleado</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Detalles" asp-controller="Home" method="POST">
            <input type="hidden" asp-for="empleado.IdEmpleado" />

            <div class="mb-2">
                <label class="form-label" asp-for="empleado.Nombre">Nombre</label>
                <input type="text" class="form-control form-control-sm" asp-for="empleado.Nombre" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="empleado.Correo">Correo</label>
                <input type="text" class="form-control form-control-sm" asp-for="empleado.Correo" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="empleado.Telefono">Telefono</label>
                <input type="text" class="form-control form-control-sm" asp-for="empleado.Telefono" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="empleado.IdCargo">Cargo</label>
                <select class="form-select form-select-sm" asp-for="empleado.IdCargo" asp-items="@Model.listaCargo">
                    <option selected disabled> ---Selecciona una opcion---</option>
                </select>
            </div>
            <div class="mb-2">
                @if (Model.empleado.IdEmpleado == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }
                <a class="btn btn-dark btn-sm" asp-controller="Home" asp-action="Index" > Volver </a>
            </div>

        </form>
    </div>
</div>

